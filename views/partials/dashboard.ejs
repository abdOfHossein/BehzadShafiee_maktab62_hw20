<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/dashboard.css" />
</head>

<body>
    <div class="countainer-dashboard">

        <img class="img" src="/img/background.jpeg" />

        <div class="content-dashboard">


            <h2>Wellcome to your page
                <%= blogger.firstName %>
            </h2>

            <div class="d-info">
                <form action='/admin/dashboard/delete' method="get">
                    <div class="info">

                        <div class="row-info">
                            <h4>userName:</h4>
                            <h4 class="position-right">
                                <%= blogger.userName %>
                            </h4>
                        </div>
                        <div class="row-info ">
                            <h4>password:</h4>
                            <h4 class="position-right">
                                <%= blogger.password %>
                            </h4>

                        </div>

                        <div class="row-info ">
                            <h4>lastName:</h4>
                            <h4 class="position-right">
                                <%= blogger.lastName %>
                            </h4>
                        </div>
                        <div class="row-info ">
                            <h4>firstName:</h4>
                            <h4 class="position-right">
                                <%= blogger.firstName %>
                            </h4>
                        </div>
                        <div class="row-info ">
                            <h4>phoneNumber:</h4>

                            <%if((blogger.phoneNumber)){%>
                                <h4 class="position-right">
                                    <%= blogger.phoneNumber %>
                                </h4>
                                <%}else{ %>
                                    <h4>
                                        0<%= blogger.phoneNumber %>
                                    </h4>

                                    <% } %>


                        </div>
                        <div class="row-info">

                            <h4>gender:</h4>
                            <h4 class="position-right">
                                <%= blogger.gender %>
                            </h4>

                        </div>

                    </div>
                    <div class="two-btns">
                        <button class="btn-update-userInfo w-105px btn btn-success">update</button>
                        <button type="submit" class="w-105px btn-delete btn btn-danger">delete</button>
                    </div>

                    <div class="d-avatar">
                        <img class="avatar" src='/img/<%= srcImgBlogger%>' alt="bloggerImage">
                        <form action="/admin/dashboard/avatar/update" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="img-reg">put yor image</label>
                                <input type="file" id="updateAvatar" name="updateAvatar">
                            </div>
                            <button id="btn-creat-article" class="btn btn-success">Change My Avatar</button>
                        </form>
                    </div>
                </form>
                <div class="d-btns">
                    <a href="/:role/dashboard/articles/seeAll"> <button id="btn-see-my-articles"
                            class="btn btn-primary">See Whole Articles</button></a>
                    <form action="/logout" method="get">
                        <button type="submit" class="btn-delete btn btn-warning">logout</button>
                    </form>
                    <a href="/:role/dashboard/articles/seeMine"> <button id="btn-see-my-articles"
                            class="btn btn-primary">See My Articles</button></a>

                    <button id="btn-creat-article" class="btn-creat-article btn btn-primary">creatArticle</button>

                </div>
                <p style="display: none">

                    <%= msg %>
                </p>
            </div>




            <!-- update Info modal and form -->
            <form action="/admin/dashboard/update" method="post">
                <div id="modal-update-userInfo" class="modal">
                    <div class="modal-body">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">update user info</h3>
                                <button type="button" class="close-update-userInfo" data-bs-dismiss="modal"
                                    aria-label="Close"> &#10006</button>
                            </div>
                            <div class="modal-body-2">

                                <div class="form-group-update">

                                    <label for="userName">userName:</label>

                                    <input class="w-450px position-right" value="<%= blogger.userName %>" type="text"
                                        id="userName" name="userName" placeholder="userName">
                                    <h3>

                                    </h3>
                                </div>
                                <div class="form-group-update">
                                    <label for="password">password:</label>
                                    <input class="w-450px position-right" value="<%= blogger.password %>"
                                        type="password" id="password" name="password" placeholder="Password">
                                    <p id="alarm-password"></p>
                                </div>

                                <div class="form-group-update">
                                    <label for="firstName">firstName:</label>
                                    <input class="w-450px position-right" value="<%= blogger.firstName %>" type="text"
                                        id="firstName" name="firstName" placeholder="firstName">
                                    <p id="alarm-firstName"></p>
                                </div>
                                <div class="form-group-update">
                                    <label for="lastName"> lastName:</label>
                                    <input class="w-450px position-right" value="<%= blogger.lastName %>" type="text"
                                        id="lastName" name="lastName" placeholder="lastName">
                                    <p id="alarm-lastName"></p>
                                </div>
                                <div class="form-group-update">
                                    <label for="userName">phoneNumber:</label>
                                    <input class="w-450px position-right" value="0<%= blogger.phoneNumber %>" type="tel"
                                        id="phoneNumber" name="phoneNumber" placeholder="e.x: 09151234567">
                                    <div>
                                        <p id="alarm-phoneNumber"></p>
                                    </div>

                                </div>
                                <div class="form-group-update">

                                    <h4>gender:</h4>
                                    <div class="position-top-left">
                                        <input class="form-check-input" type="radio" name="gender" id="male"
                                            value="male">
                                        <label class="form-check-label" for="male">
                                            male </label>
                                        <input class="form-check-input" type="radio" name="gender" id="female"
                                            value="female">
                                        <label class="form-check-label" for="female">
                                            female
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>


            <!-- creatNewArticle modal and form --> 
             <form action="/:role/dashboard/articles/creat" method="post" enctype="multipart/form-data" role="form">
                <div class="modal" id="modal-creatArticle">
                    <div class="modal-body">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Creat New Article</h3>
                                <button type="button" id="close-creatArticle" class="close" data-bs-dismiss="modal"
                                    aria-label="Close"> &#10006</button>
                            </div>
                            <div class="modal-body-2">
                                <div class="">

                                    <label for="titleArticle">titleArticle:</label>

                                    <input class="w-500px" type="text" id="titleArticle" name="titleArticle"
                                        placeholder="titleArticle">
                                </div>
                                <div class="form-group ">
                                    <label for="textArticle">textArticle:</label>
                                    <textarea id="textArticle" name="textArticle" rows="12" cols="75">
                                            </textarea>

                                </div>

                                <div class="form-group">
                                    <label for="img-article">Image Of Article:</label>
                                    <input type="file" id="imgArticle" name="imgArticle">

                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="/js/main.js"></script>

<script>
    let msg = `<%= msg %>`;
    if (msg) {
        alert(msg)
    };
</script>

</html>